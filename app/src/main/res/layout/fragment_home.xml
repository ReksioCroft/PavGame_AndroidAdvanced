<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.tav.pavgame.presentation.fragments.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_8"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ro.tav.pavgame.presentation.view.PavGameHomeLoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_8"
        app:layout_constraintBottom_toBottomOf="@id/text_home"
        app:layout_constraintEnd_toEndOf="@id/text_home"
        app:layout_constraintStart_toStartOf="@id/text_home"
        app:layout_constraintTop_toTopOf="@id/text_home"
        app:loadingColor="?attr/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>
